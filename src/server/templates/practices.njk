{% extends 'layouts/base.njk' %}

{% block body_main_content %}
  <div class="local-header">
    <h1 class="local-header__title">Apply to register with a GP practice</h1>
  </div>

  <div class="page-section">
    <div class="reading-width">
      <p>This service is currently only available with a limited amount of practices.</p>

      <p>Please choose a practice from this list:</p>

      <ul>
        {% for practice in practices %}
          <li>
            <a href="/{{ practice.key }}/start">{{ practice.name }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endblock %}
